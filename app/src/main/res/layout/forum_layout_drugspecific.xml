<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Drug Specific Discussions"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:background="@color/colorText">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Alcohol"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView10"
                android:layout_marginTop="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView11" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                android:src="@drawable/forum1"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignStart="@+id/view"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Number of Posts:"
                android:id="@+id/textView11"
                android:textColor="@color/black"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="514"
                android:id="@+id/textView12"
                android:layout_alignTop="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:paddingLeft="20dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorDivider"
                android:id="@+id/view"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Marijuana"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView13"
                android:layout_below="@+id/view"
                android:layout_alignStart="@+id/textView14"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:src="@drawable/forum2"
                android:layout_alignTop="@+id/textView13"
                android:layout_alignStart="@+id/imageView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Number of Posts:"
                android:id="@+id/textView14"
                android:textColor="@color/black"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toStartOf="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="105"
                android:id="@+id/textView15"
                android:paddingLeft="20dp"
                android:layout_alignTop="@+id/textView14"
                android:layout_alignStart="@+id/textView12" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorDivider"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:id="@+id/view3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Others"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView16"
                android:layout_below="@+id/view3"
                android:layout_alignStart="@+id/textView14"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView6"
                android:src="@drawable/forum3"
                android:layout_alignTop="@+id/textView16"
                android:layout_alignStart="@+id/imageView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Number of Posts:"
                android:id="@+id/textView17"
                android:textColor="@color/black"
                android:layout_below="@+id/textView16"
                android:layout_alignStart="@+id/textView16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="265"
                android:id="@+id/textView18"
                android:paddingLeft="20dp"
                android:layout_below="@+id/textView16"
                android:layout_toEndOf="@+id/textView17" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/colorDivider"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:id="@+id/view4"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>